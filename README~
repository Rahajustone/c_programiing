#include <stdio.h>
    int main(void)
{
        int pay1,payda1,pay2,payda2;
        float sonuc,toplam,sonuc1;
        printf("Lutfen pay1 ve payda1 giriniz:");
        scanf("%d %d",&pay1,&payda1);
        printf("Lutfen pay2 ve payda2 giriniz:");
        scanf("%d %d",&pay2,&payda2);

        toplam=(pay1*payda2+pay2*payda1);
        sonuc1=payda1*payda2;
        sonuc=toplam/sonuc1;
        printf("%f\n",sonuc);
        return 0;
}



