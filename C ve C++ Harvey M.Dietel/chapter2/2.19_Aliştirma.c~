/*3 sayinin toplami yazan program*/
#include <stdio.h>
   int main(
  {
  	int sayi1,sayi2,sayi3;
  	int toplam,ortalama,carpim,min,max;
        
  	printf("Lutfen birinci sayi giriniz:");
  	scanf("%d",sayi1);
  	printf("Lutfen ikinci sayi giriniz:");
  	scanf("%d",sayi2);
  	printf("Lutfen sayi3 sayi giriniz:");
  	scanf("%d",sayi3);
  	toplam=sayi1+sayi2+sayi3;
        ortalma=toplama/3;
        if (sayi1<sayi2)
		if(sayi2<sayi3)
			printf("En buyuk:%d\n",sayi3);
			printf("En küçük:%d\n",sayi1);

		else
			printf("En buyuk:%d\n",sayi2);
			printf("En küçük:%d\n",sayi3);
        else if(sayi1>sayi2)
		if(sayi1>sayi3)
			printf("En buyuk:%d\n",sayi1);
               
        
  	printf("toplam=%d",toplam);
  	return 0;
  }
